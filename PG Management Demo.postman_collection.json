        { "name": "Get Tenant by ID", "request": { "method": "GET", "url": { "raw": "http://localhost:4000/tenants/1", "protocol": "http", "host": ["localhost"], "port": "4000", "path": ["tenants", "1"] } } },
        { "name": "Update Tenant", "request": { "method": "PUT", "header": [ { "key": "Content-Type", "value": "application/json" } ], "body": { "mode": "raw", "raw": "{\n  \"name\": \"Updated Name\"\n}" }, "url": { "raw": "http://localhost:4000/tenants/1", "protocol": "http", "host": ["localhost"], "port": "4000", "path": ["tenants", "1"] } } },
        { "name": "Delete Tenant", "request": { "method": "DELETE", "url": { "raw": "http://localhost:4000/tenants/1", "protocol": "http", "host": ["localhost"], "port": "4000", "path": ["tenants", "1"] } } }
