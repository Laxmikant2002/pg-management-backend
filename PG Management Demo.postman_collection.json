    {
      "name": "Payments",
      "item": [
        { "name": "List Payments", "request": { "method": "GET", "url": { "raw": "http://localhost:4000/payments", "protocol": "http", "host": ["localhost"], "port": "4000", "path": ["payments"] } } },
        { "name": "Filter Payments", "request": { "method": "GET", "url": { "raw": "http://localhost:4000/payments?tenantId=1&month=11&year=2024", "protocol": "http", "host": ["localhost"], "port": "4000", "path": ["payments"], "query": [ { "key": "tenantId", "value": "1" }, { "key": "month", "value": "11" }, { "key": "year", "value": "2024" } ] } } },
        { "name": "Create Payment", "request": { "method": "POST", "header": [ { "key": "Content-Type", "value": "application/json" } ], "body": { "mode": "raw", "raw": "{\n  \"tenantId\": 1,\n  \"month\": 12,\n  \"year\": 2024,\n  \"amount\": 5000\n}" }, "url": { "raw": "http://localhost:4000/payments", "protocol": "http", "host": ["localhost"], "port": "4000", "path": ["payments"] } } },
        { "name": "Update Payment", "request": { "method": "PUT", "header": [ { "key": "Content-Type", "value": "application/json" } ], "body": { "mode": "raw", "raw": "{\n  \"status\": \"PAID\"\n}" }, "url": { "raw": "http://localhost:4000/payments/1", "protocol": "http", "host": ["localhost"], "port": "4000", "path": ["payments", "1"] } } },
        { "name": "Tenant Payments", "request": { "method": "GET", "url": { "raw": "http://localhost:4000/tenants/1/payments", "protocol": "http", "host": ["localhost"], "port": "4000", "path": ["tenants", "1", "payments"] } } }
      ]
    },
    {
      "name": "Complaints",
      "item": [
