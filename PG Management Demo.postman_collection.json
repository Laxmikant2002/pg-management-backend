        { "name": "Get Room by ID", "request": { "method": "GET", "url": { "raw": "http://localhost:4000/rooms/1", "protocol": "http", "host": ["localhost"], "port": "4000", "path": ["rooms", "1"] } } },
        { "name": "Update Room", "request": { "method": "PUT", "header": [ { "key": "Content-Type", "value": "application/json" } ], "body": { "mode": "raw", "raw": "{\n  \"status\": \"OCCUPIED\"\n}" }, "url": { "raw": "http://localhost:4000/rooms/1", "protocol": "http", "host": ["localhost"], "port": "4000", "path": ["rooms", "1"] } } }
